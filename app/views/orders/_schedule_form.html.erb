<div id="modal-form" class="modal" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-primary">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">
          <span class="fa fa-clock-o"></span>
          Schedule order
        </h4>
      </div>

      <%= form_for @order, url:process_schedule_order_path(@order), html:{class:'form-horizontal'} do |f| %>

      <div class="modal-body">
        <div class="form-group">
          <%= f.label :date_needed, "Date you need this deck", class:'col-sm-4 control-label' %>
          <div class="col-sm-8">
            <%= f.datetime_select :date_needed, discard_hour: true, discard_minute: true, discard_second: true, class:'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :days_needed, "How long will you need this deck?", class:'col-sm-4 control-label' %>
          <div class="col-sm-8 medium-select">
            <%= f.select :days_needed,
                options_for_select([['7 days',7],['14 days', 14],['30 days', 30]]),
                {},class:'form-control col-sm-6' %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">
          <span class="fa fa-credit-card"></span>
          Proceed to checkout
        </button>

      </div><!-- /.modal-footer -->

      <% end %>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


