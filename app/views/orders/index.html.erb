<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Date needed</th>
      <th>Date shipped</th>
      <th>Date returned</th>
      <th>Amount</th>
      <th>Days needed</th>
      <th>Date due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.date_needed %></td>
        <td><%= order.shipped %></td>
        <td><%= order.returned %></td>
        <td><%= order.amount %></td>
        <td><%= order.days_needed %></td>
        <td><%= order.date_due %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

