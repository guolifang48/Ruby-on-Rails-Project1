<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="intro login-form">
      <h1>
        Log into your account
      </h1><br>
      <%= form_for(:session, url: sessions_path, html:{class:'form'}) do |f| %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :email, class:'control-label' %><%= f.text_field :email, class:'form-control' %>
          </div>
        </div>
        <div class="col-md-6"></div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :password, class:'control-label' %><%= f.password_field :password, class:'form-control' %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group"></div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= check_box_tag :remember_me, true, params[:remember_me] %><%= label_tag :remember_me, "Remember me", class:'control-label' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= f.submit "Log in", class:'btn btn-primary btn-lg' %>
          <p id="password_reset-link">
            <%= link_to "forgotten password?", new_password_reset_path %>
          </p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<br><br>