<div id="modal-form" class="modal" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-primary">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">
          Update site setting
        </h4>
      </div>

      <%= form_for([:admin, @template_deck, @template_deck_card], html:{class:'form-horizontal'}, remote:true) do |f| %>

      <div class="modal-body">

        <div class="form-group">
          <%= f.label :card_id, "Card", class:'control-label col-sm-3' %>
          <div class="col-sm-9 medium-select">
            <%= @template_deck_card.card.name %>
          </div>
        </div>


        <div class="form-group">
          <%= f.label :quantity, class:'control-label col-sm-3' %>
          <div class="col-sm-9 medium-select">
            <%= f.number_field :quantity, class:"form-control" %>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> <%= f.submit "Save", class:'btn btn-primary' %>
      </div><!-- /.modal-footer -->

      <% end %>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->