<div id="modal-form" class="modal" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-primary">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">
          Card Set
        </h4>
      </div>

      <%= form_for([:admin, @card_set], html:{class:'form-horizontal'}) do |f| %>

      <div class="modal-body">
        <div class="form-group">
          <%= f.label :name, class:"col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :name, class:'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :code, class:"col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :code, class:'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :release_date, class:"col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.date_select :release_date, class:'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :set_type, class:"col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :set_type, class:'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :category, class:"col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.select :category, CardSet.categories.keys.to_a, include_blank: true, class:'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :position, class:"col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :position, class:'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :block, class:"col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :block, class:'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :online_only, class:"col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.check_box :online_only, class:'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :current_standard, class:"col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.check_box :current_standard, class:'form-control' %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> <%= f.submit "Save", class:'btn btn-primary' %>
      </div><!-- /.modal-footer -->

      <% end %>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->