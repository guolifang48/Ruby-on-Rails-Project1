<div id="modal-form" class="modal" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-primary">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">
          Order Shipping Form
        </h4>
      </div>
      <%= form_for([:admin, @order], url:{action:'shipped'}, html:{class:'form-horizontal'}, remote:true) do |f| %>

      <div class="modal-body">
        <div class="row"><div class="col-md-11">

        <div class="form-group">
          <%= f.label :shipped, class:"col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.datetime_select :shipped, :discard_hour => true, :discard_minute => true, :discard_second => true, class:'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :shipping_reference_no, class:"col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :shipping_reference_no, class:'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :shipping_message, class:"col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_area :shipping_message, rows:4, class:'form-control' %>
            <%= f.hidden_field :shipped, value:true %>
          </div>
        </div>

      </div></div>
      </div><!-- .modal-body -->

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> <%= f.submit "Save", class:'btn btn-primary' %>
      </div><!-- /.modal-footer -->

      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
