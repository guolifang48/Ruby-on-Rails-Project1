<div id="order-controls">
<div class="row order-controls-row">
  <div class="col-md-4">
    <% if order.paid %>
    <%= link_to 'order paid', '#', class:'btn btn-block btn-success btn-outline active', disabled:true, id:'new-order-charge-link', remote:true %>
    <% else %>
    <%= link_to 'charge for order', new_admin_order_stripe_charge_path(order, charge_for_order:true), class:'btn btn-block btn-success btn-outline', id:'new-order-charge-link', remote:true %>
    <% end %>
  </div>
  <div class="col-md-4">
    <% if order.shipped.present? %>
    <%= link_to "shipped #{order.shipped.strftime('%b %e')}", '#', class:'btn btn-block btn-primary btn-outline active', disabled:true, id:'new-order-charge-link', remote:true %>
    <% else %>
    <%= link_to 'ship order', shipped_form_admin_order_path(order), class:'btn btn-block btn-primary btn-outline', remote:true %>
    <% end %>
  </div>
  <div class="col-md-4">
    <% if order.returned.present? %>
    <%= link_to "received #{order.returned.strftime('%b %e')}", '#', class:'btn btn-block btn-default btn-outline active', disabled:true, id:'order-returned-link', remote:true %>
    <% else %>
    <!-- Single button -->
    <div class="btn-group">
      <button type="button" class="btn btn-block btn-default btn-outline dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        Deck receipt <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'deck received', returned_admin_order_path(order), class:'text-primary textbold', remote:true %></li>
        <li><%= link_to 'return delayed', edit_admin_order_path(order, delayed:true), class:'text-danger textbold', remote:true %></li>
      </ul>
    </div>


    <% end %>
  </div>
</div>

<div id="order-charge-form-target"></div>

</div>

