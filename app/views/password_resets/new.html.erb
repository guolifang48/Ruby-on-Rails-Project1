<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="intro login-form">
      <h1>
        Forgot password
      </h1>

      <%= form_for(:user, url: password_resets_path, method: :post, html:{class:'form'}) do |f| %>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :email, class:'control-label' %><%= f.text_field :email, name: :email, required: true, class:'form-control' %>
              </div>
            </div>
            <div class="col-md-6"></div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= f.submit "Reset password", class:'btn btn-primary btn-lg' %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
<br><br>
